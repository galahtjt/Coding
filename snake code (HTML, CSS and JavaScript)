<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snake Game</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }
        canvas {
            border: 1px solid #000;
        }
        #controls {
            margin-top: 10px;
        }
        #history {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas" width="400" height="400"></canvas>
    <div id="controls">
        <button id="startBtn">Начать играть</button>
        <button id="cheatBtn">CHEAT OFF</button>
    </div>
    <div id="history">
        <h3>История игр</h3>
        <ul id="historyList"></ul>
    </div>
    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const box = 20;
        let snake = [{ x: 9 * box, y: 10 * box }];
        let food = { x: Math.floor(Math.random() * 19) * box, y: Math.floor(Math.random() * 19) * box };
        let score = 0;
        let d;
        let game;
        let timer;
        let timeLeft = 7;
        let immortal = false;

        document.addEventListener('keydown', direction);
        document.getElementById('startBtn').addEventListener('click', startGame);
        document.getElementById('cheatBtn').addEventListener('click', toggleCheat);

        function direction(event) {
            if (event.keyCode == 37 && d != 'RIGHT') {
                d = 'LEFT';
            } else if (event.keyCode == 38 && d != 'DOWN') {
                d = 'UP';
            } else if (event.keyCode == 39 && d != 'LEFT') {
                d = 'RIGHT';
            } else if (event.keyCode == 40 && d != 'UP') {
                d = 'DOWN';
            }
        }

        function startGame() {
            clearInterval(game);
            clearTimeout(timer);
            snake = [{ x: 9 * box, y: 10 * box }];
            score = 0;
            d = null;
            timeLeft = 7;
            game = setInterval(draw, 100);
            timer = setTimeout(gameOver, 7000);
        }

        function toggleCheat() {
            immortal = !immortal;
            document.getElementById('cheatBtn').textContent = immortal ? 'CHEAT ON' : 'CHEAT OFF';
        }

        function draw() {
            ctx.fillStyle = '#f4f4f4';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            for (let i = 0; i < snake.length; i++) {
                ctx.fillStyle = (i == 0) ? 'green' : 'white';
                ctx.strokeStyle = 'black';
                ctx.fillRect(snake[i].x, snake[i].y, box, box);
                ctx.strokeRect(snake[i].x, snake[i].y, box, box);
            }

            ctx.fillStyle = 'red';
            ctx.fillRect(food.x, food.y, box, box);

            let snakeX = snake[0].x;
            let snakeY = snake[0].y;

            if (d == 'LEFT') snakeX -= box;
            if (d == 'UP') snakeY -= box;
            if (d == 'RIGHT') snakeX += box;
            if (d == 'DOWN') snakeY += box;

            if (snakeX == food.x && snakeY == food.y) {
                score++;
                food = {
                    x: Math.floor(Math.random() * 19) * box,
                    y: Math.floor(Math.random() * 19) * box
                };
                timeLeft = 7;
                clearTimeout(timer);
                timer = setTimeout(gameOver, 7000);
            } else {
                snake.pop();
            }

            let newHead = { x: snakeX, y: snakeY };

            if (!immortal && (snakeX < 0 || snakeY < 0 || snakeX >= canvas.width || snakeY >= canvas.height || collision(newHead, snake))) {
                gameOver();
            }

            snake.unshift(newHead);
        }

        function collision(head, array) {
            for (let i = 0; i < array.length; i++) {
                if (head.x == array[i].x && head.y == array[i].y) {
                    return true;
                }
            }
            return false;
        }

        function gameOver() {
            clearInterval(game);
            let historyList = document.getElementById('historyList');
            let listItem = document.createElement('li');
            listItem.textContent = `Score: ${score}`;
            historyList.appendChild(listItem);
        }
    </script>
</body>
</html>
